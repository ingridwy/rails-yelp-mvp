<ul>
  <h3><%= @restaurant.name %></h3>
  <li><%= @restaurant.address %></li>
  <li><%= @restaurant.phone_number %></li>
  <li><%= @restaurant.category %></li>
</ul>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %><%= review.rating %></li>
  <% end %>
</ul>

<p><%= link_to 'back',  restaurants_path %></p>
<p><%= link_to 'write a new review', new_restaurant_review_path(@restaurant) %></p>
